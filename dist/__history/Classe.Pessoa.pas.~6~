unit Classe.Pessoa;

interface

uses
 System.SysUtils;

type
  TPessoa = class
  private
    FNome: String;
    procedure SetNome(const Value: String);

  public
  property Nome : String read FNome write SetNome;

  end;

implementation

procedure TPessoa.SetNome(const Value: String);
begin
if Value = '' then  raise Exception.Create('O nome não pode ser vazio!!!');

  FNome := Value;
end;

end.
